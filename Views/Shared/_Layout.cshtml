<!DOCTYPE html>
<html   lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cartoons</title>
    @*<style>
        body {
             background-image: url('../images/img.jpg');
    background-attachment: fixed;
    background-size: cover; 
   /* margin-bottom: 20px;*/
        }
    </style>*@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style1.css" />
</head>

<body  class ="body">
   
    <header>
        <nav class=" kolor navbar  navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 " style="color: rgba(242, 43, 43, .50)">
            <div class="container">
                <a class="cart" asp-area="" asp-controller="Home" asp-action="Index">Cartoons</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="bykvu" asp-area="" asp-controller="Cartoons" asp-action="Index">Мультфільми</a>
                        </li>

                        <li class="nav-item">
                            <a class="bykvu" asp-area="" asp-controller="FilmStudios" asp-action="Index">Студії</a>
                        </li>

                        <li class="nav-item">
                            <a class="bykvu" asp-area="" asp-controller="Awards" asp-action="Index">Нагороди</a>
                        </li>
                    
                        <li class="nav-item">
                            <a class="bykvu" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="homebtn bykvu" asp-area="" asp-controller="Users" asp-action="Index">  Users</a>
                        </li>
                        <li class="nav-item">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a style="margin-right:80px" class="bykvu enter" asp-controller="Account" asp-action="Account">@User.Identity.Name</a>

                                <form method="post" asp-controller="Account" asp-action="Logout">
                                    <input class="bykvu knopka_logout" type="submit" value="Вихід" />
                                </form>
                            }
                            else
                            {
                                <a class="bykvu enter" asp-controller="Account" asp-action="Login">Вхід</a>
                                <a class="bykvu reg" asp-controller="Account" asp-action="Register">Реєстація</a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="bykvu pb-3" style="color: rgb(72, 0, 255)">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - CartoonsWebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
