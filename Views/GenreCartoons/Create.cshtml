@model CartoonsWebApp.GenreCartoons

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>GenreCartoons</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" value="@ViewBag.genreId" name="GenresId"/>
            
            <div class="form-group">
                <label asp-for="CartoonsId" class="control-label"></label>
                <select asp-for="CartoonsId" class="form-control" asp-items="ViewBag.CartoonsId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
