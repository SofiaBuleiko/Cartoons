@model CartoonsWebApp.ViewModel.EditUserViewModel
@{
    ViewData["Title"] = "Account - ";
}
<div class="enter_block">
    <h1>Account</h1>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => User.Identity.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => User.Identity.Name)
        </dd>

        <dt class="col-sm-2">
            <p>Права</p>
        </dt>
        <dd class="col-sm-10">
            @if (User.IsInRole("admin"))
            {
                <p>Адміністратор</p>
            }
            else
            { <p>Користувач</p>}
        </dd>
    </dl>
    <a asp-action="Edit" asp-controller="Users" asp-route-id="id">Edit</a>
</div>