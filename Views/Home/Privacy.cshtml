<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link href="~/css/style.css" rel="stylesheet" />
    <script src="~/js/site.js"></script>
</head>
<body>

    <div class="container">
        <div id="chart1"></div>
        <div id="chart2"></div>
    </div>
    @section scripts{
        <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
        <script>
            google.charts.load('current', { 'packages': ['corechart'] });
            google.charts.setOnLoadCallback(drawChart);
            function drawChart() {
                $.get('/api/Charts/JsonData', function (jsonData) {
                    data = google.visualization.arrayToDataTable(jsonData, false);
                    var option = {
                        title: "Співвідношення кількості мультфільмів та студій",
                        width: 500,
                        height: 400
                    };
                    chart = new google.visualization.PieChart(document.getElementById('chart1'));
                    chart.draw(data, option);
                })
            }

        </script>
        <script>
            google.charts.load('current', { 'packages': ['corechart'] });
            google.charts.setOnLoadCallback(drawChart);
            function drawChart() {
                $.get('/api/Charts/JsonData1', function (jsonData1) {
                    data = google.visualization.arrayToDataTable(jsonData1, false);
                    var option = {
                        title: "Тривалість мультфільмів в хвилинах",
                        width: 500,
                        height: 400
                    };
                    chart = new google.visualization.ColumnChart(document.getElementById('chart2'));
                    chart.draw(data, option);
                })
            }

        </script>

    }





</body>
</html>